<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" debug="false">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%4p] [%d{HH:mm:ss}] [%t] %c{36}: %m%n</pattern>
    </encoder>
  </appender>
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <File>lift/logs/lift/lift.log</File>
    <encoder>
      <pattern>[%d{HH:mm:ss}] [%4p] [%t] %c{36}: %m%n</pattern>
    </encoder>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>lift/logs/lift/lift-%d{yyyy-MM-dd-HH}.log</fileNamePattern>
    </rollingPolicy>
  </appender>
  <logger name="org.gruj" level="INFO"/>
  <root level="INFO">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="FILE"/>
  </root>
</configuration>
